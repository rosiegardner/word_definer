<h2>Words: <%= @definition.word_content %></h2>
<h3>Definition: <%= @definition.word.name %></h3>

<form action="/words/<%= @definition.word.id %>/definition/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Edit definition</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update definition</button>
</form>

<form action="/words/<%= @definition.word.id %>/definition/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>